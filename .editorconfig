# top-most EditorConfig file
root = true

[*]
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace  = true
insert_final_newline = true
charset = utf-8

[*.{coffee,jade,styl}]
indent_style = space
indent_size = 4

[*.js]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4

[*.go]
indent_style = tab
indent_size = 8

[*.{yaml,yml}]
indent_size = space
indent_size = 2

[*.md]
indent_style = space
trim_trailing_whitespace = false

[{Makefile, makefile, GNUmakefile}]
indent_style = tab
indent_size = 4

[*.markdown]
indent_style = space
trim_trailing_whitespace = false
